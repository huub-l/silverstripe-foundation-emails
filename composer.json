{
    "name": "lekoala/silverstripe-foundation-emails",
    "description": "Better emails layout for SilverStripe",
    "type": "silverstripe-module",
    "keywords": [
        "silverstripe",
        "foundation",
        "emails",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [{
        "name": "LeKoala",
        "email": "thomas@lekoala.be"
    }],
    "require": {
        "php": "~7",
        "silverstripe/framework": "^4",
        "lorenzo/pinky": "^1.0"
    },
    "extra": {
        "installer-name": "foundation-emails",
        "expose": [
            "images"
        ]
    },
    "suggest": {
        "lorenzo/pinky": "Use Inky for your html emails",
        "pelago/emogrifier": "Inline styles for your emails",
        "lekoala/silverstripe-sparkpost": "Use SparkPost to send your emails",
        "lekoala/silverstripe-email-templates": "Email templates editables from the cms"
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-foundation-emails/issues"
    }
}
